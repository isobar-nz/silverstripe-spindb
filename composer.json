{
    "name": "littlegiant/silverstripe-spindb",
    "license": "BSD-3-Clause",
    "description": "Backup DB periodically and backup to AWS S3 storage with rotation",
    "require": {
        "silverstripe/framework": "^3.1",
        "silverstripe/crontask": "^1.2.0",
        "aws/aws-sdk-php": "^3.69",
        "silverstripe/environmentcheck": "^1.3.0",
        "spatie/db-dumper": "~1.5.1"
    },
    "authors": [
        {
            "name": "Damian Mooyman",
            "email": "damian.mooyman@littlegiant.co.nz"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-ss3": "dev-ss3.x-compat"
        }
    },
    "scripts": {
        "lint": "phpcs --standard=PSR2 src/",
        "lint-clean": "phpcbf --standard=PSR2 src/"
    },
    "minimum-stability": "dev"
}
